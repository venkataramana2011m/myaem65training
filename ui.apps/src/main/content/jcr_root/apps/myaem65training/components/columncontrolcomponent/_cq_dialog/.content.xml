<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Column Control Dialog"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <cardslist
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Cards"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columnctrl
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldDescription="Choose Column style(Advanced for column customization)."
                                fieldLabel="Column Control"
                                name="./colctrl">
                                <items jcr:primaryType="nt:unstructured">
                                    <option1
                                        jcr:primaryType="nt:unstructured"
                                        text="1 Column(100%)"
                                        value="100"/>
                                    <option2
                                        jcr:primaryType="nt:unstructured"
                                        text="2 Column(50%,50%)"
                                        value="50-50"/>
                                    <option3
                                        jcr:primaryType="nt:unstructured"
                                        text="2 Columns (33%, 67%)"
                                        value="33-67"/>
                                    <option4
                                        jcr:primaryType="nt:unstructured"
                                        text="2 Columns (67%, 33%)"
                                        value="67-33"/>
                                    <option5
                                        jcr:primaryType="nt:unstructured"
                                        text="3 Columns (33%, 33%, 33%)"
                                        value="33-33-33"/>
                                    <option6
                                        jcr:primaryType="nt:unstructured"
                                        text="3 Columns (25%, 25%, 50%)"
                                        value="25-25-50"/>
                                    <option7
                                        jcr:primaryType="nt:unstructured"
                                        text="3 Columns (50%, 25%, 25%)"
                                        value="50-25-25"/>
                                    <option8
                                        jcr:primaryType="nt:unstructured"
                                        text="4 Columns (25%, 25%, 25%, 25%)"
                                        value="25-25-25-25"/>
                                </items>
                            </columnctrl>
                        </items>
                    </cardslist>
                </items>
            </column>
        </items>
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
            type="nav"/>
    </content>
</jcr:root>
